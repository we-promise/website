<% content_for :title, "Something went wrong" %>
<% content_for :description, "We're experiencing technical difficulties." %>

<article class="min-h-[60vh] flex items-center justify-center px-4">
  <section class="max-w-[600px] mx-auto text-center">
    <!-- 500 Badge -->
    <div class="mb-8">
      <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-red-100 border border-red-200 shadow-sm">
        <span class="text-3xl font-mono font-semibold text-red-700">500</span>
      </div>
    </div>

    <!-- Main Heading -->
    <h1 class="text-[3rem] md:text-[3.5rem] text-gray-700 leading-tight tracking-[-0.04em] font-medium mb-4">
      Something went wrong
    </h1>

    <!-- Description -->
    <p class="text-xl font-normal leading-[1.4] text-gray-400 mb-8 max-w-[500px] mx-auto">
      We're experiencing technical difficulties. Our team has been notified and is working on a fix.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <%= link_to "Go back home", root_path, 
          class: "group relative inline-flex h-11 animate-rainbow cursor-pointer items-center justify-center rounded-lg border-0 bg-[length:200%] px-6 py-2 font-medium text-white transition-colors [background-clip:padding-box,border-box,border-box] [background-origin:border-box] [border:calc(0.08*1rem)_solid_transparent] focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 before:absolute before:bottom-[-20%] before:left-1/2 before:z-0 before:h-1/5 before:w-3/5 before:-translate-x-1/2 before:animate-rainbow before:bg-[linear-gradient(90deg,hsl(var(--color-1)),hsl(var(--color-5)),hsl(var(--color-3)),hsl(var(--color-4)),hsl(var(--color-2)))] before:bg-[length:200%] before:[filter:blur(calc(0.8*1rem))] bg-[linear-gradient(#121213,#121213),linear-gradient(#121213_50%,rgba(18,18,19,0.6)_80%,rgba(18,18,19,0)),linear-gradient(90deg,hsl(var(--color-1)),hsl(var(--color-5)),hsl(var(--color-3)),hsl(var(--color-4)),hsl(var(--color-2)))]" %>
      
      <%= link_to "Contact support", "https://discord.gg/FTzQqpnwSh", target: "_blank", rel: "noopener noreferrer",
          class: "py-2 px-6 text-sm leading-[18px] text-black group rounded-lg hover:bg-alpha-black-50 bg-transparent border-[1px] border-gray-300 hover:border-gray-300 flex items-center gap-1 shadow-btn-plain-inset-1 shadow-btn-plain-inset-2" %>
    </div>

    <!-- Status Update -->
    <div class="mt-16 pt-16 border-t border-gray-200">
      <p class="text-sm text-gray-500 mb-4">While we fix this, you can:</p>
      <div class="flex flex-col gap-2 max-w-[400px] mx-auto text-sm">
        <p class="text-gray-600">• Try refreshing the page in a few moments</p>
        <p class="text-gray-600">• Check our <%= link_to "Discord community", "https://discord.gg/FTzQqpnwSh", target: "_blank", rel: "noopener noreferrer", class: "text-gray-900 underline hover:no-underline" %> for updates</p>
        <p class="text-gray-600">• Return to the <%= link_to "homepage", root_path, class: "text-gray-900 underline hover:no-underline" %></p>
      </div>
    </div>
  </section>
</article>